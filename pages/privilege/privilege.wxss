page {
  background-color: #f8f8f8;
}

.header-container {
  padding: 30px 20px;
  background-color: #fff;
}

.header-title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  display: block;
}

.header-subtitle {
  font-size: 14px;
  color: #999;
  margin-top: 5px;
  display: block;
}

.list-container {
  margin-top: 10px;
  padding: 0 15px;
}

.privilege-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 15px;
  margin-bottom: 12px;
  border-radius: 12px;
}

.icon-box {
  width: 50px;
  height: 50px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-right: 15px;
}

.info-box {
  flex: 1;
}

.title {
  font-size: 17px;
  font-weight: 500;
  color: #333;
  display: block;
}

.desc {
  font-size: 13px;
  color: #888;
  margin-top: 4px;
  display: block;
}

.arrow {
  color: #ccc;
  font-size: 14px;
}

.title-row {
  display: flex;
  align-items: center;
}

.tag {
  font-size: 10px;
  background-color: #ff3b30;
  color: #fff;
  padding: 2px 6px;
  border-radius: 4px;
  margin-left: 8px;
}

.expiry-text {
  font-size: 11px;
  color: #b2b2b2;
  margin-top: 6px;
  display: block;
}

/* 让快过期的卡片稍微有点不同，比如边框更明显（可选） */
.privilege-item:first-child {
  border: 1px solid rgba(255, 59, 48, 0.3);
}