page {
  background-color: #f8f8f8;
}

.header-container {
  padding: 30px 20px;
  background-color: #fff;
}

.header-title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  display: block;
}

.header-subtitle {
  font-size: 14px;
  color: #999;
  margin-top: 5px;
  display: block;
}

.list-container {
  margin-top: 10px;
  padding: 0 15px;
}

.icon-box {
  width: 50px;
  height: 50px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  margin-right: 15px;
}

.info-box {
  flex: 1;
}

.title {
  font-size: 17px;
  font-weight: 500;
  color: #333;
  display: block;
}

.arrow {
  color: #ccc;
  font-size: 14px;
}

.title-row {
  display: flex;
  align-items: center;
}

.tag {
  font-size: 10px;
  background-color: #ff3b30;
  color: #fff;
  padding: 2px 6px;
  border-radius: 4px;
  margin-left: 8px;
}

.expiry-text {
  font-size: 11px;
  color: #b2b2b2;
  margin-top: 6px;
  display: block;
}

/* 让快过期的卡片稍微有点不同，比如边框更明显（可选） */
.privilege-item:first-child {
  border: 1px solid rgba(255, 59, 48, 0.3);
}

/* 卡片被按住时的缩放和阴影变化 */
.item-hover {
  transform: scale(0.97); /* 稍微缩小，模拟按下效果 */
  background-color: #fcfcfc !important; /* 颜色微变 */
  opacity: 0.8;
  transition: all 0.1s;
}

/* 给 info-box 里的描述增加一个最大行数，防止字太多撑破卡片 */
.desc {
  font-size: 13px;
  color: #888;
  margin-top: 4px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 最多显示两行 */
  overflow: hidden;
}

/* 加上一个漂亮的卡片浮动阴影 */
.privilege-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 18px 15px; /* 增加一点内间距 */
  margin-bottom: 12px;
  border-radius: 16px; /* 更圆润一点 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: transform 0.2s; /* 让回弹变平滑 */
}

/* 遮罩层 */
.service-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}
.service-mask.show {
  visibility: visible;
  opacity: 1;
}

/* 弹窗主体 */
.service-dialog {
  position: fixed;
  bottom: -600rpx; /* 初始在屏幕下方 */
  left: 0; right: 0;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  z-index: 1001;
  transition: all 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
}
.service-dialog.show {
  bottom: 0;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.dialog-close {
  color: #ccc;
  font-size: 40rpx;
  padding: 10rpx;
}

/* 网格布局 */
.service-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  padding-bottom: 60rpx;
}

.service-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.1s;
}
.service-option:active {
  transform: scale(0.9);
}

.service-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-bottom: 16rpx;
}
.service-name {
  font-size: 26rpx;
  color: #666;
}