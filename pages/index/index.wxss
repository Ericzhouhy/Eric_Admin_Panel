.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8; /* 建议与你 Top Bar 的灰色一致 */
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;     
}

.homepage-pic {
  width: 100%;      /* 宽度撑满，配合 mode="aspectFit" 保证图片比例 */
  height: 60vh;     /* 占据屏幕高度的 60% */
  margin-top: 20rpx; /* 顶部留一点距离，防止撞到 Top Bar */
  margin-bottom: 40rpx;
}

.user-motto {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 80rpx;
}

.entry-button {
  background-color: #07c160;
  color: white;
  width: 320rpx !important; /* 强制按钮宽度 */
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: normal;
}