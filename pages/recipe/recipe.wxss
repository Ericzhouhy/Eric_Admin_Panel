.container { height: 100vh; background-color: #f4f7f6; }

.recipe-list {
  height: 100vh;
  /* padding-top 改小或者去掉，靠卡片的 margin 来撑开 */
  padding: 10rpx 30rpx 30rpx 30rpx; 
  box-sizing: border-box;
}

.recipe-card {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 20rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.card-left {
  flex-shrink: 0; /* 防止图片被压缩 */
  width: 180rpx;
  height: 180rpx;
}

.recipe-img {
  width: 100%;
  height: 100%; /* 从 350rpx 改为 100% */
  border-radius: 12rpx; /* 让图片带点圆角更美观 */
  background-color: #eee;
  display: block; /* 消除图片底部间隙 */
}

.card-right {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  /* 关键修改：从 space-between 改为 flex-start，让内容靠上对齐 */
  justify-content: flex-start; 
  overflow: hidden;
}

.recipe-header {
  /* 确保名字下方有一点点间距再接食材 */
  margin-bottom: 8rpx; 
}

.recipe-desc {
  font-size: 24rpx;
  color: #7f8c8d; /* 稍微调浅一点颜色，突出菜名 */
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-info { padding: 24rpx 30rpx; }

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.ingredients-box {
  margin-top: 0rpx;
}

.ingredients-label {
  font-size: 24rpx;
  color: #ff9500;
  font-weight: bold;
}

.tag {
  font-size: 20rpx;
  background: #fff9f0;
  color: #ff9500;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-bottom: 6rpx;
}

.image-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column; /* 确保文字在图标下面 */
  background: #f8fafc;
  border: 2rpx dashed #cbd5e1;
  color: #64748b;
  height: 240rpx;
  border-radius: 16rpx;
  margin-top: 10rpx;
}

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #07c160, #05944a);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  box-shadow: 0 10rpx 25rpx rgba(7,193,96,0.4);
}


.recipe-card:active { transform: scale(0.98); } /* 点击微缩 */

/* 弹出层：增加毛玻璃蒙层 */
.popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8rpx); /* 毛玻璃模糊效果 */
  z-index: 998;
}

.popup-content {
  position: fixed;
  bottom: 0; /* 固定在底部 */
  left: 0; 
  right: 0;
  background: #ffffff;
  padding: 50rpx 40rpx calc(env(safe-area-inset-bottom) + 40rpx);
  border-radius: 40rpx 40rpx 0 0;
  z-index: 999;
  
  /* 关键修改：使用 transform 将其完全推到屏幕外 */
  transform: translateY(100%); 
  transition: transform 0.4s cubic-bezier(0.25, 1, 0.5, 1);
  
  /* 配合 visibility 确保隐藏时不可交互 */
  visibility: hidden; 
}

.popup-show {
  transform: translateY(0); 
  visibility: visible !important;
}

/* 输入框升级：呼吸感设计 */
.popup-input, .popup-textarea {
  background: #f0f2f5;
  border: 2rpx solid transparent;
  padding: 25rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}

.popup-input:focus, .popup-textarea:focus {
  background: #ffffff;
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.image-placeholder text { font-size: 26rpx; margin-top: 10rpx; }

/* 底部按钮：拟物化阴影 */
.btn-confirm {
  background: linear-gradient(135deg, #07c160, #06ad56);
  box-shadow: 0 10rpx 20rpx rgba(7, 193, 96, 0.2);
  border: none;
  border-radius: 24rpx;
}

.btn-cancel {
  background: #f1f5f9;
  color: #64748b;
  border-radius: 24rpx;
}

/* 让加号按钮内部显示出白色十字 */
.plus-icon {
  width: 40rpx;
  height: 6rpx;
  background: white;
  position: relative;
  border-radius: 4rpx;
}

.plus-icon::after {
  content: '';
  width: 6rpx;
  height: 40rpx;
  background: white;
  position: absolute;
  top: -17rpx;
  left: 17rpx;
  border-radius: 4rpx;
}

/* 按钮点击反馈 */
.fab-active {
  transform: scale(0.9);
  opacity: 0.9;
}