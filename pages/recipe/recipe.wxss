.container {
  height: 100vh;
  background-color: #f4f7f6;
  /* 关键修复：开启 BFC 阻止外边距穿透，彻底消除顶部空白 */
  display: flex;
  flex-direction: column;
}

.recipe-list {
  height: 100vh;
  /* padding-top 改小或者去掉，靠卡片的 margin 来撑开 */
  padding: 0rpx 30rpx 30rpx 30rpx; 
  box-sizing: border-box;
}

.recipe-card {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 20rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.card-left {
  flex-shrink: 0; /* 防止图片被压缩 */
  width: 180rpx;
  height: 180rpx;
}

.recipe-img {
  width: 100%;
  height: 100%; /* 从 350rpx 改为 100% */
  border-radius: 12rpx; /* 让图片带点圆角更美观 */
  background-color: #eee;
  display: block; /* 消除图片底部间隙 */
}

.card-right {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  /* 关键修改：从 space-between 改为 flex-start，让内容靠上对齐 */
  justify-content: flex-start; 
  overflow: hidden;
}

.recipe-header {
  /* 确保名字下方有一点点间距再接食材 */
  margin-bottom: 8rpx; 
}

.recipe-desc {
  font-size: 24rpx;
  color: #7f8c8d; /* 稍微调浅一点颜色，突出菜名 */
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-info { padding: 24rpx 30rpx; }

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.ingredients-box {
  margin-top: 0rpx;
}

.ingredients-label {
  font-size: 24rpx;
  color: #ff9500;
  font-weight: bold;
}

.tag {
  font-size: 20rpx;
  background: #fff9f0;
  color: #ff9500;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-bottom: 6rpx;
}

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #07c160, #05944a);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  box-shadow: 0 10rpx 25rpx rgba(7,193,96,0.4);
}


.recipe-card:active { transform: scale(0.98); } /* 点击微缩 */

/* 弹出层：增加毛玻璃蒙层 */
.popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8rpx); /* 毛玻璃模糊效果 */
  z-index: 998;
}

.image-placeholder text { font-size: 26rpx; margin-top: 10rpx; }

/* 让加号按钮内部显示出白色十字 */
.plus-icon {
  width: 40rpx;
  height: 6rpx;
  background: white;
  position: relative;
  border-radius: 4rpx;
}

.plus-icon::after {
  content: '';
  width: 6rpx;
  height: 40rpx;
  background: white;
  position: absolute;
  top: -17rpx;
  left: 17rpx;
  border-radius: 4rpx;
}

/* 按钮点击反馈 */
.fab-active {
  transform: scale(0.9);
  opacity: 0.9;
}

/* 弹出层内容区：增加流畅的圆角和纯白背景 */
.popup-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  /* 增加顶部圆角，更有容器感 */
  border-radius: 48rpx 48rpx 0 0; 
  padding: 40rpx 40rpx calc(env(safe-area-inset-bottom) + 40rpx);
  z-index: 999;
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.18, 0.89, 0.32, 1.1); /* 增加一点点回弹动效 */
  visibility: hidden;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.1);
}

.popup-show {
  transform: translateY(0);
  visibility: visible;
}

/* 标题设计：加粗并增加装饰 */
.popup-header {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}

.popup-input {
  width: 100%;
  height: 90rpx;       
  line-height: 90rpx;    
  background: #f7f8fa;
  border-radius: 24rpx;
  padding: 0 30rpx;      
  font-size: 28rpx;
  box-sizing: border-box; 
  color: #333;
}

.popup-textarea {
  width: 100%;
  height: 220rpx;        /* 同样拉高高度 */
  background: #f7f8fa;
  border-radius: 24rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.6;      /* 增加行高，防止食材文字重叠 */
}

/* 输入框组合：给一个微灰的背景色，模拟“卡槽”感 */
.popup-input, .popup-textarea {
  width: 100%;
  background: #f7f8fa;
  border: 2rpx solid #f7f8fa;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.2s;
}

/* 聚焦时的高亮效果：更有呼吸感 */
.popup-input:focus, .popup-textarea:focus {
  background: #ffffff;
  border-color: #07c160;
  box-shadow: 0 0 0 6rpx rgba(7, 193, 96, 0.08);
}

/* 图片上传区域：从虚线框改为更有质感的卡片 */
.image-placeholder {
  width: 100%;
  height: 280rpx;
  background: #f7f8fa;
  border: 2rpx dashed #d1d5db;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden; /* 保证预览图圆角一致 */
  transition: all 0.3s;
}

.image-placeholder:active {
  background: #f0f2f5;
  transform: scale(0.99);
}

.image-placeholder image {
  width: 100%;
  height: 100%;
}

.image-placeholder text {
  font-size: 26rpx;
  color: #94a3b8;
  margin-top: 16rpx;
}

/* 按钮区域布局 */
.popup-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.btn-cancel {
  background: #f1f5f9;
  color: #64748b;
  display: flex;       
  align-items: center;
  justify-content: center;
}

.btn-confirm {
  background: linear-gradient(135deg, #07c160, #05944a);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  display: flex;       
  align-items: center;
  justify-content: center;
}

.btn-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.2);
}