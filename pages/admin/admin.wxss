/* 背景容器：改用极淡的暖灰色或纯白 */
.admin-container {
  padding: 40rpx;
  background-color: #F7F8FA; 
  min-height: 100vh;
  color: #333333;
}

/* 标题：清新渐变，不再用刺眼的黑金 */
.admin-header {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
  text-align: center;
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, #FF9500, #FFCC00);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 表单卡片：纯白卡片加软阴影（Apple 风格） */
.form-card {
  background: #ffffff;
  border-radius: 40rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 60rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

/* 输入框：浅灰色背景，聚焦时高亮 */
.admin-input, .admin-textarea, .admin-input-small, .picker-item {
  background: #F2F2F7 !important; /* 经典的 iOS 浅灰背景 */
  border: 2rpx solid transparent;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  color: #333;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.admin-input:focus, .admin-textarea:focus {
  background: #ffffff !important;
  border-color: #FF9500;
  box-shadow: 0 0 10rpx rgba(255, 149, 0, 0.1);
}

/* 文本域 */
.admin-textarea {
  height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

.picker-group {
  display: flex;
  gap: 20rpx;
}

.picker-item {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.admin-input-small {
  flex: 1;
  text-align: center;
}

/* 提交按钮：清新明亮的橙红渐变 */
.btn-submit {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #FF9500, #FF5E3A);
  color: #ffffff;
  font-weight: 600;
  border-radius: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 94, 58, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-submit:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 标签文字 */
.label-text {
  font-size: 24rpx;
  color: #8E8E93;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  font-weight: 500;
}

/* 占位符颜色 */
.admin-input::placeholder, .admin-textarea::placeholder {
  color: #BDBDBD;
}

.admin-section-title {
  margin: 40rpx 0 20rpx 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #8E8E93;
}

.cleanup-card {
  margin-top: 0;
}

.btn-cleanup {
  margin-top: 10rpx;
  background: #ffffff;
  color: #FF3B30; /* 警示红 */
  border: 2rpx solid #FF3B30;
  font-weight: 500;
  border-radius: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cleanup:active {
  background: #FFF5F5;
  transform: scale(0.98);
}