<view class="admin-container">
  <view class="admin-header">👑 权力巅峰：发卡中心</view>

  <view class="form-card">
    <input 
      class="admin-input" 
      placeholder="特权卡名称" 
      value="{{form.title}}" 
      bindinput="onTitleInput" 
    />
    <textarea 
      class="admin-textarea" 
      placeholder="特权描述..." 
      value="{{form.desc}}" 
      bindinput="onDescInput" 
    />
    
    <view class="picker-group">
      <picker mode="date" value="{{form.expiryDate}}" bindchange="onDateChange">
        <view class="picker-item">有效期至: {{form.expiryDate}}</view>
      </picker>
      <input 
        class="admin-input-small" 
        placeholder="Icon" 
        value="{{form.icon}}" 
        bindinput="onIconInput" 
      />
    </view>

    <button class="btn-submit" bindtap="submitCard">立即发放特权</button>
  </view>
  <view class="admin-section-title">🧹 维护中心</view>
  <view class="form-card cleanup-card">
    <view class="label-text">清理已生效的特权，保持数据库整洁</view>
    <button class="btn-cleanup" bindtap="onClearUsed">清理已使用卡片</button>
  </view>
</view>